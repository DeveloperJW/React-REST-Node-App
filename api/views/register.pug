extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up
        // register form
        form(method='POST' action='/api/users')
          div.form-group
              label(for='first') First Name:
              input#first.form-control(type='text', placeholder='enter your first name' name='firstName')
          div.form-group
            label(for='lastName') Last Name:
            input#lastName.form-control(type='text', placeholder='enter your last name' name='lastName')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='emailAddress')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
          button.btn.btn-primary(type='submit') Sign up
